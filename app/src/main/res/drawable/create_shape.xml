<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/dimGray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <solid
                    android:color="@color/lightGray">
            </solid>

            <stroke
                    android:width="2dp"
                    android:color="@color/dimGray">
            </stroke>

            <corners
                    android:radius="10dp">
            </corners>

        </shape>
    </item>

</layer-list>
